{
  "name": "ibericode/vat",
  "description": "PHP library for dealing with EU VAT",
  "keywords": ["vat"],
  "license": "MIT",
  "authors": [
    {
      "name": "Danny van Kooten",
      "email": "hi@dvk.co"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1",
    "friendsofphp/php-cs-fixer": "^3.54"
  },
  "autoload": {
    "psr-4": {
      "Ibericode\\Vat\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Ibericode\\Vat\\Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "prefer-stable": true,
  "suggest": {
    "ibericode/vat-bundle": "Symfony bundle for integrating this package",
    "ext-soap": "Needed to support VIES VAT number validation"
  },
  "scripts": {
    "check-syntax": "find . -name '*.php' -not -path './vendor/*' -print0 | xargs -0 -n1 php -l"
  }
}
